@model HelpDeskTrain.Models.Inventory

@{
    ViewBag.Title = "Редагування ";
}

<h2>Редагування запису</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Редагування запису</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Characteristic)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Characteristic)
            @Html.ValidationMessageFor(model => model.Characteristic)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Appointment)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Appointment)
            @Html.ValidationMessageFor(model => model.Appointment)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateRelease)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateRelease)
            @Html.ValidationMessageFor(model => model.DateRelease)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.InvNumber)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.InvNumber)
            @Html.ValidationMessageFor(model => model.InvNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Count)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Count)
            @Html.ValidationMessageFor(model => model.Count)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Comment)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Comment)
            @Html.ValidationMessageFor(model => model.Comment)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Units)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Units)
            @Html.ValidationMessageFor(model => model.Units)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.Published)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Published)
            @Html.ValidationMessageFor(model => model.Published)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Checked)
        </div>
        <div class="editor-field">
            @Html.CheckBoxFor(model => model.Checked)
            @Html.ValidationMessageFor(model => model.Checked)
        </div>
        <p>
            <input type="submit" value="Зберегти" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Назад до списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
