@model IEnumerable<HelpDeskTrain.Models.LessonList>

@{
    ViewBag.Title = "Список занять";
}

<div><form method="post" action="/LessonList/Index">
        <table>
            <tr><td><p>Дисципліна : </p></td><td> @Html.DropDownList("Discipline",ViewBag.Disciplines as SelectList)</td>
           
            <td><input type="submit" value="Фільтр" /> </td></tr>
        </table>
    </form></div>
<h2>Список занять</h2>

<p>
    @Html.ActionLink("Створити заняття", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThemeNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LessonNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LessonDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LessonType)
        </th>
        
         <th>
            @Html.DisplayNameFor(model => model.Discipline.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Required)
        </th>
         <th>
            @Html.DisplayNameFor(model => model.RequiredField)
        </th>

        

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThemeNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LessonNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LessonDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LessonType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discipline.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Required)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequiredField)
        </td>

        <td>
            <a class="openDialog" data-dialog-id="infoDialog" data-dialog-title="Видалити запис" 
               href="/LessonList/Delete/@item.Id">
               <img src="../../Content/pictures/delete-icon.png" class="tdImage" title="Видалити запис" />
              <a class="openDialog" data-dialog-id="infoDialog" data-dialog-title="Редагувати запис" 
               href="/LessonList/Edit/@item.Id">
               <img src="../../Content/pictures/document-edit.png" class="tdImage" title="Редагувати запис" />
        </td>
    </tr>
}

</table>
